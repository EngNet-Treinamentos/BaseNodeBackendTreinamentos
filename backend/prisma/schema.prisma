generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement()) @db.UnsignedInt
  name  String @db.VarChar(50)
  todos Todo[]
}

model Todo {
  id     Int    @id @default(autoincrement()) @db.UnsignedInt
  title  String @db.VarChar(50)
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
